def askAnimal(num: number):
    global index
    if num == 1:
        list2.pop()
        list2.pop()
        game.splash(list2)
        num = 2
    elif num == 2:
        game.splash(list2)
        num = 4
    else:
        spriteTalk("You didn't type 1 or 2!", 3000)
        gameover()
    while index <= num - 1:
        if not (game.ask_for_string("What is the animal in place " + ("" + str((index + 1))) + "?") == list2[index]):
            gameover()
        index += 1
def spriteTalk(text: str, num2: number):
    mySprite.say_text(text)
    pause(num2)
def gameover():
    scene.set_background_image(assets.image("""
        locked
    """))
    mySprite.say_text("... and we're locked out of the system.. :(")
    pause(2000)
    game.over(False)
index = 0
